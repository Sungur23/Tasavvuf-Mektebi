<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounde_layoutlar"
    android:orientation="vertical">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">



        <com.thebrownarrow.customfont.CustomFontTextView
            android:textColor="@color/accent"
            android:text="Delailül Hayrat"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:custom_typeface="yt7.ttf" />


        <LinearLayout
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/deltr"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/photo133"
                    android:clickable="true"
                    android:textColor="@android:color/white" />

                <com.thebrownarrow.customfont.CustomFontTextView
                    app:custom_typeface="yt2.ttf"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Türkçe Okunuş" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/delar"
                    android:background="@drawable/photo160"
                    android:clickable="true"
                    android:layout_width="75dp"
                    android:layout_height="75dp"/>

                <com.thebrownarrow.customfont.CustomFontTextView
                    app:custom_typeface="yt2.ttf"
                    android:textSize="21sp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arapça Okunuş" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/delizle"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/photo148"
                    android:clickable="true"
                    android:textColor="@android:color/white" />

                <com.thebrownarrow.customfont.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Videolar"
                    android:textColor="@color/black"
                    app:custom_typeface="yt2.ttf"
                    android:textSize="21sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>