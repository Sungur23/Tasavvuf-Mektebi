<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Sadatikiram.SadatlarGoster">


    <ScrollView
        android:id="@+id/Sadat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <com.github.florent37.arclayout.ArcLayout
                android:id="@+id/diagonalLayout"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:elevation="10dip"
                app:arc_cropDirection="cropOutside"
                app:arc_position="bottom"
                app:arc_height="50dp"
                >

                <com.flaviofaria.kenburnsview.KenBurnsView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sadat"
                    />


            </com.github.florent37.arclayout.ArcLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">


                <TextView
                    android:id="@+id/BaşlıgıSadat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:text="-*-"
                    android:visibility="gone" />



                <TextView
                    android:textIsSelectable="true"
                    android:id="@+id/Sadattext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_weight="1"
                    android:text="."
                    android:textColor="@color/black" />

                <TextView
                    android:textIsSelectable="true"
                    android:id="@+id/Sadattext1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:text="."
                    android:textColor="@color/black"
                     />

                <TextView
                    android:textIsSelectable="true"
                    android:id="@+id/Sadattext2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:text="."
                    android:textColor="@color/black"
                     />

                <TextView
                    android:textIsSelectable="true"
                    android:id="@+id/Sadattext3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:text="."
                    android:textColor="@color/black"
                     />

                <TextView
                    android:textIsSelectable="true"
                    android:id="@+id/Sadattext4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:text="."
                    android:textColor="@color/black"
                     />


                <TextView
                    android:textIsSelectable="true"
                    android:id="@+id/Sadattext5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:text="."
                    android:textColor="@color/black"
                     />







            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>