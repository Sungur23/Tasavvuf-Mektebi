<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ap00003"
    android:gravity="center"
    tools:context=".KazaNamazlari.KazaHesaplayici">

    <LinearLayout
        android:background="@color/black_opacity_60"
        android:gravity="center"
        android:id="@+id/ekran2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:background="@drawable/trasparentbutton"
            android:id="@+id/hesaplama"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kaza Başlangıç Tarihi"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gün"
                    android:textColor="@color/Beyaz"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ay"
                    android:textColor="@color/Beyaz"

                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/Beyaz"
                    
                    android:text="Yıl"
                    android:textAlignment="center"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Bgün"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="01"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColorHint="@color/blue" />

                <EditText
                    android:id="@+id/Bay"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="02"
                    android:inputType="date"
                    android:textAlignment="center"
                    android:textColorHint="@color/blue" />

                <EditText
                    android:id="@+id/Byıl"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="2013"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColorHint="@color/blue" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Düzenli Namaz Kılma Tarihi"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gün"
                    android:textColor="@color/Beyaz"

                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ay"
                    android:textColor="@color/Beyaz"

                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Yıl"
                    android:textColor="@color/Beyaz"

                    android:textAlignment="center"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Ggün"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="04"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColorHint="@color/blue" />

                <EditText
                    android:id="@+id/Gay"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="05"
                    android:inputType="date"
                    android:textAlignment="center"
                    android:textColorHint="@color/blue" />

                <EditText
                    android:id="@+id/Gyıl"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="2016"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColorHint="@color/blue" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/hesaplamabutonu"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/trasparentbutton"
                android:text="Hesapla"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:visibility="visible" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>