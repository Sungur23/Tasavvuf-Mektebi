<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/d"
    android:background="@drawable/bg_messages"
    tools:context=".Chat.ChatActivity">



    <ListView
        android:transcriptMode="alwaysScroll"
        android:stackFromBottom="true"
        android:divider="@android:color/transparent"
        android:id="@+id/chatListView"
        android:layout_marginBottom="51dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>


    <LinearLayout
        android:id="@+id/f1"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/beyazcor">
        <LinearLayout
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:backgroundTint="@color/white"
            android:orientation="horizontal">

            <EditText
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/editpost"
                android:id="@+id/inputChat"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:hint="Mesajınızı yazınız..."
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textCursorDrawable="@color/renk1"/>


            <LinearLayout
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/fab"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_above="@+id/inputChat"
                    android:background="@drawable/gonder" />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>



</RelativeLayout>
