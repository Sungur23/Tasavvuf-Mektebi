<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/lib"
    tools:context=".Deneme.DosyaIndirici">

    <LinearLayout
        android:background="@color/black_opacity_60"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/kitapphoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/book" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView

                            android:id="@+id/paylaş"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/basmaefekt4"
                            android:visibility="visible" />

                        <com.thebrownarrow.customfont.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="@string/Paylaş"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            app:custom_typeface="yt2.ttf" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/indir"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@drawable/down"
                            android:scaleType="fitCenter"
                            android:visibility="visible" />

                        <com.thebrownarrow.customfont.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="İndir"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            app:custom_typeface="yt2.ttf" />


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/kitapadı"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/Beyaz"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kitabın Türü:"
                        android:textColor="@color/Beyaz"
                        android:visibility="visible" />

                    <TextView
                        android:textSize="17sp"

                        android:layout_marginLeft="10dp"
                        android:id="@+id/kitaptürü"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/red"
                        android:visibility="visible" />
                </LinearLayout>

                <TextView
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/kitapbilgi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:text="TextView"
                    android:textColor="@color/Beyaz"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kitapurl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/Beyaz"
                    android:visibility="gone" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>