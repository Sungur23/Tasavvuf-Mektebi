<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounde_layoutlar"
    android:orientation="vertical">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">



        <com.thebrownarrow.customfont.CustomFontTextView
            android:textColor="@color/red"
            android:text="Ayarlar"
            android:visibility="gone"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:custom_typeface="yt5.ttf" />


        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.thebrownarrow.customfont.CustomFontTextView
                app:custom_typeface="yt6.ttf"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yaz覺 Boyutu" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/buttonshape4"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/boyutazalt覺c覺"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/basmaefekt7" />

                <TextView
                    android:id="@+id/boyuttextim"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="21"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="21sp" />

                <Button
                    android:id="@+id/boyutaett覺r"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/basmaefekt6" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_marginBottom="80dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <com.thebrownarrow.customfont.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Arka Plan"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/black"
                    app:custom_typeface="yt6.ttf"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <HorizontalScrollView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.makeramen.roundedimageview.RoundedImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/tema1"
                            android:background="@color/white"
                            android:scaleType="fitCenter"
                            app:riv_corner_radius="30dip"
                            app:riv_border_width="2dip"
                            app:riv_border_color="#333333"
                            app:riv_mutate_background="true"
                            app:riv_oval="true"
                            android:clickable="true"
                            android:layout_height="75dp"
                            android:layout_width="75dp" />


                        <com.makeramen.roundedimageview.RoundedImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/tema2"
                            android:background="@drawable/aplan00014"
                            android:scaleType="fitCenter"
                            app:riv_corner_radius="30dip"
                            app:riv_border_width="2dip"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            app:riv_border_color="#333333"
                            app:riv_mutate_background="true"
                            app:riv_oval="true"
                            android:clickable="true"
                            android:layout_height="75dp"
                            android:layout_width="75dp" />



                        <com.makeramen.roundedimageview.RoundedImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/tema3"
                            android:background="@drawable/ap00001"
                            android:scaleType="fitCenter"
                            app:riv_corner_radius="30dip"
                            app:riv_border_width="2dip"
                            app:riv_border_color="#333333"
                            app:riv_mutate_background="true"
                            app:riv_oval="true"
                            android:clickable="true"
                            android:layout_height="75dp"
                            android:layout_width="75dp" />



                    </LinearLayout>

                </HorizontalScrollView>


            </LinearLayout>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>