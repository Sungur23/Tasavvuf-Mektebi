<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/d"
    android:background="@drawable/trasparentbutton"
    tools:context=".Chat.ChatActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <EditText
                android:minEms="19"
                android:textColorHint="@color/gray"
                tools:ignore="HardcodedText"
                android:textCursorDrawable="@color/red"
                app:backgroundTint="@color/transparent"
                android:id="@+id/notlar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:hint="Henüz not eklemediniz..."
                android:text="⭐⭐⭐"
                android:textStyle="bold" />
        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/d1"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/beyazcor">
        <LinearLayout
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:backgroundTint="@color/white"
            android:orientation="horizontal">

            <EditText
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/editpost"
                android:id="@+id/inputChat"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:hint="Notunuzu yazınız..."
                android:textColor="@android:color/black"
                android:textColorHint="@color/black_semi_transparent"
                android:textCursorDrawable="@color/renk1"/>


            <LinearLayout
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/fab"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_above="@+id/inputChat"
                    android:background="@drawable/ic_save_black_24dp" />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>



</RelativeLayout>
