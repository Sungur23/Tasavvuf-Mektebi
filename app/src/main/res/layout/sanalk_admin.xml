<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".SanalKütüphane.Admin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/refKitap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />




    <EditText
        android:id="@+id/kitapurl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Kitap url" />


    <EditText
        android:id="@+id/kitapphotourl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Kitap photo url" />

    <EditText
        android:visibility="visible"
        android:id="@+id/kitapadı"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kitap Adı" />
    <EditText
        android:visibility="visible"
        android:id="@+id/yazaradı"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Yazar  adı" />


    <EditText
        android:visibility="visible"
        android:id="@+id/yazarkatogori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Yazar Katagori id" />


    <CheckBox
        android:id="@+id/trending_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Trending" />

    <Button
        android:id="@+id/yayınla"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#000"
        android:text="Gönder"
        android:textColor="#fff" />

</LinearLayout>