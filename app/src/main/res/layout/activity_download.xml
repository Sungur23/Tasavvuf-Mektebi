<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/aplan00014"
    tools:context=".Deneme.Download">

    <LinearLayout
        android:layout_marginTop="70dp"
        android:background="@drawable/buttonshape"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/kitapphoto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/book" />

        <TextView
            android:textColor="@color/Beyaz"
            android:id="@+id/kitapadı"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView

                    android:id="@+id/paylaş"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/basmaefekt4"
                    android:visibility="visible" />

                <com.thebrownarrow.customfont.CustomFontTextView
                    app:custom_typeface="yt2.ttf"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Paylaş" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/indir"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/down"
                    android:visibility="visible" />

                <com.thebrownarrow.customfont.CustomFontTextView
                    app:custom_typeface="yt2.ttf"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="İndir" />



            </LinearLayout>

        </LinearLayout>


        <TextView
            android:textColor="@color/Beyaz"
            android:id="@+id/kitaptürü"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
        <TextView
            android:textColor="@color/Beyaz"
            android:layout_marginBottom="30dp"
            android:id="@+id/kitapbilgi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:textColor="@color/Beyaz"
            android:id="@+id/kitapurl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>

</ScrollView>