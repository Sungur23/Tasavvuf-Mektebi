<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="bottom"
    android:background="@drawable/trasparentbutton"
    android:layout_height="match_parent">
    <LinearLayout
        app:layout_anchorGravity="bottom"
        android:id="@+id/d1"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/beyazcor">
        <LinearLayout
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:backgroundTint="@color/white"
            android:orientation="horizontal">

            <EditText
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/editpost"
                android:id="@+id/inputnote"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:hint="Notunuzu yazınız..."
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textCursorDrawable="@color/renk1"/>


            <LinearLayout
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/notekaydet"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_above="@+id/inputChat"
                    android:background="@drawable/gonder" />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>